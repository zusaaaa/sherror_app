= render "items/header"
.form
  .form__title
    ログイン
  .form-contents
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-contents__title 
        メールアドレス
      .form-contents__items
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input"
      .form-contents__title
        パスワード
      .form-contents__items
        = f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード', class: "form-input"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me
      .actions
        = f.submit "ログイン"
  = render "devise/shared/links"
